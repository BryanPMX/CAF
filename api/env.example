# CAF System Environment Configuration
# Production-ready configuration with timezone synchronization and rate limiting

# Database Configuration
DB_USER=caf_user
DB_PASSWORD=secure_password_2024
DB_HOST=localhost
DB_NAME=caf_production
DB_PORT=5432
DB_SSLMODE=require

# Application Configuration
PORT=8080
NODE_ENV=production
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production

# AWS Configuration
AWS_REGION=us-east-2
S3_BUCKET=caf-documents-prod
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Stripe Configuration (client payments / receipts)
STRIPE_SECRET_KEY=sk_live_replace_me
# STRIPE_PUBLISHABLE_KEY=pk_live_replace_me
STRIPE_CHECKOUT_SUCCESS_URL=https://caf-mexico.org/pagos/exito
STRIPE_CHECKOUT_CANCEL_URL=https://caf-mexico.org/pagos/cancelado
STRIPE_WEBHOOK_SECRET=whsec_replace_me
STRIPE_CURRENCY=mxn

# CRITICAL: Timezone Configuration
# This ensures consistent timezone handling across the entire application stack
TZ=UTC

# Rate Limiting Configuration
# Development-friendly values to prevent lockouts during testing
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION_MINUTES=1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://admin.caf-mexico.org,https://admin.caf-mexico.com,https://portal.caf-mexico.org,https://portal.caf-mexico.com,https://caf-mexico.org,https://caf-mexico.com,https://www.caf-mexico.org,https://www.caf-mexico.com

# Session Configuration
# These are handled in the application code but documented here for reference
# SESSION_TIMEOUT=24h
# INACTIVITY_TIMEOUT=24h
# MAX_CONCURRENT_SESSIONS=3

# Security Configuration
# Enable these in production
# HTTPS_ONLY=true
# SECURE_COOKIES=true
# CSRF_PROTECTION=true

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Performance Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=100
MAX_CONNECTIONS=100
